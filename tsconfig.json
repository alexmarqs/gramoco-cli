{
	"compilerOptions": {
    "target": "es2021", 
    "module": "NodeNext",  
    "moduleResolution": "NodeNext",              
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true,
    "resolveJsonModule": true,
  },
	"exclude": ["node_modules", "dist", "bin", "**/*.spec.ts", "**/*.test.ts"],
	"include": ["src/**/*.ts"]
}
